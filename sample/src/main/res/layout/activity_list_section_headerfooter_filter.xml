<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ListSample_Loadable_HeaderFooter_Filter_Activity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:id="@+id/list_act_btn_filter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filter section!"/>
        <Button
                android:id="@+id/list_act_btn_filter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filter subdata!"/>
    </LinearLayout>

    <com.xgfe.android.components.xgrecyclerview.recyclerviews.XGRecyclerView
            android:id="@+id/list_act_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>
